# Database
DATABASE_URL="postgresql://user:password@localhost:5432/magic_auth"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# App
APP_URL="http://localhost:3000"

# Email Provider (choose one)
EMAIL_PROVIDER="console"  # console, resend, nodemailer

# Common email settings
FROM_EMAIL="noreply@yourapp.com"
FROM_NAME="Your App Name"

# === RESEND (if EMAIL_PROVIDER=resend) ===
# Install: npm install resend
RESEND_API_KEY="re_your_resend_api_key"

# === NODEMAILER/SMTP (if EMAIL_PROVIDER=nodemailer) ===
# Install: npm install nodemailer @types/nodemailer
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"  # true for port 465, false for port 587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"  # for Gmail use App Password
