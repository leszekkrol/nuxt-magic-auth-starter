# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgresql://magic_auth_user:magic_auth_password@localhost:5433/magic_auth"

# ==============================================
# AUTHENTICATION
# ==============================================
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"

# ==============================================
# APPLICATION
# ==============================================
APP_URL="http://localhost:3000"
NODE_ENV="development"

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Email Provider: console | resend | autosend | nodemailer
# Default: console (logs to terminal, no external dependencies)
EMAIL_PROVIDER="console"

# Common email settings (used by all providers)
FROM_EMAIL="noreply@yourapp.com"
FROM_NAME="Your App Name"

# ==============================================
# RESEND (if EMAIL_PROVIDER=resend)
# ==============================================
# Get your API key at: https://resend.com
RESEND_API_KEY="re_your_resend_api_key"

# ==============================================
# AUTOSEND (if EMAIL_PROVIDER=autosend)
# ==============================================
# Get your API key at: https://autosend.com
# Documentation: https://docs.autosend.com
AUTOSEND_API_KEY="as_your_autosend_api_key"

# ==============================================
# NODEMAILER / SMTP (if EMAIL_PROVIDER=nodemailer)
# ==============================================

# Gmail example:
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Outlook example:
# SMTP_HOST="smtp-mail.outlook.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@outlook.com"
# SMTP_PASS="your-password"

# Custom SMTP server example:
# SMTP_HOST="mail.yourserver.com"
# SMTP_PORT="465"
# SMTP_SECURE="true"
# SMTP_USER="noreply@yourserver.com"
# SMTP_PASS="your-smtp-password"
