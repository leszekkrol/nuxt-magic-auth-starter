{
  "name": "nuxt-magic-auth-starter",
  "version": "1.0.4",
  "description": "Magic Link Authentication Starter for Nuxt.js - Passwordless login system with email-based authentication",
  "type": "module",
  "exports": {
    ".": {
      "import": "./nuxt.config.ts"
    },
    "./composables": {
      "import": "./composables/useAuth.ts"
    },
    "./prisma/schema": "./prisma/schema.prisma"
  },
  "main": "./nuxt.config.ts",
  "files": [
    "assets",
    "components",
    "composables",
    "layouts",
    "lib",
    "middleware",
    "nuxt.config.ts",
    "pages",
    "prisma/schema.prisma",
    "prisma/seed.ts",
    "server",
    "templates",
    ".env.example"
  ],
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "nuxt prepare",
    "db:generate": "prisma generate",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leszekkrol/nuxt-magic-auth-starter.git"
  },
  "keywords": [
    "nuxt",
    "nuxt4",
    "nuxt-layer",
    "nuxt-module",
    "magic-link",
    "authentication",
    "passwordless",
    "jwt",
    "starter",
    "template"
  ],
  "author": "Leszek W. Kr√≥l",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leszekkrol/nuxt-magic-auth-starter/issues"
  },
  "homepage": "https://github.com/leszekkrol/nuxt-magic-auth-starter#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "nuxt": "^4.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.22.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vueuse/core": "^14.1.0",
    "dotenv": "^17.2.3",
    "happy-dom": "^20.0.11",
    "nuxt": "^4.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
